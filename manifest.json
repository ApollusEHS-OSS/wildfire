{
  "name": "Wildfire",
  "short_name": "Wildfire",
  "version": "1.1.3",
  "manifest_version": 2,
  "author": "wildfire.ai",
  "description": "Record browser actions then replay within Chrome. Craft your own custom automation workflows.",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background":  {
    "scripts": ["main.js", "aes.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery-2.2.4.min.js", "content.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "browsingData",
    "proxy",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "tabs",
    "webNavigation",
    "storage",
    "tabCapture",
    "notifications",
    "http://*/",
    "https://*/",
    "<all_urls>",
    "unlimitedStorage"
  ],
  "web_accessible_resources": ["embedded.js"],
  "externally_connectable": {
    "matches": ["https://cloud.wildfire.ai/*"]
  }
}
