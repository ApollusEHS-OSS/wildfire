{
  "name": "Wildfire",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Records user actions and suggests automation.",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "120": "icon-120.png"
  },
  "background":  {
    "scripts": ["main.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}
